{
  "compilerOptions": {
    /* Basic Options */
    "target": "ESNext",                        // modern JS output
    "module": "ESNext",                        // use ES modules
    "lib": ["DOM", "DOM.Iterable", "ESNext"],  // include browser and modern JS APIs
    "allowJs": true,                            // allow JS files in the project
    "checkJs": false,                           // donâ€™t type-check JS
    "jsx": "react-jsx",                         // React 17+ JSX transform
    "declaration": false,                       // no type declarations
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,                             // enable all strict checks
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                        // skip type checking node_modules

    /* Type Checking Options */
    "isolatedModules": true,
    "noEmit": true,                               // no JS output, Vite handles build

    /* Path Aliases (optional) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Type Roots */
    "typeRoots": ["./node_modules/@types", "./types"],  
    "allowImportingTsExtensions": true,
  },

  "include": ["src", "types"],                  // include source and custom types
  "exclude": ["node_modules", "dist"]
}
